{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-undef": "off",
        "simple-import-sort/sort": "error",
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    },
    "ignorePatterns": ["node_module", "out", "*.js"]
}
